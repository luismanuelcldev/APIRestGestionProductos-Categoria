{
  "name": "api-productos-prisma",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"npm run build && node dist/src/index.js\"",
    "start": "node dist/src/index.js",
    "prisma:studio": "prisma studio",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "admin:crear": "npm run build && node dist/src/crearAdmin.js",
    "logs:limpiar": "rimraf logs/*.log",
    "prisma:reset": "npx prisma migrate reset --force",
    "prisma:deploy": "npx prisma migrate deploy",
    "swagger:json": "node dist/src/index.js --export-swagger && mv swagger.json docs/"
  },
  "keywords": [
    "api",
    "rest",
    "productos",
    "prisma",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "API REST para gestión de productos y categorías utilizando Prisma ORM",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.7",
    "prisma": "^6.14.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  }
}
